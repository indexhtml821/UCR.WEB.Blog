@model UCR.WEB.Blog.Models.Post

@{
    ViewData["Title"] = "Detalles del Post";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="text-center mb-5">
                <p class="lead text-muted">Aquí puedes ver toda la información detallada del post seleccionado</p>
            </div>

            <div class="bg-light p-5 rounded-3 shadow-lg">
                <dl class="row mb-4">
                    <dt class="col-sm-3 font-weight-bold text-secondary">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-9 text-break">
                        <strong class="text-dark">@Html.DisplayFor(model => model.Title)</strong>
                    </dd>

                    <dt class="col-sm-3 font-weight-bold text-secondary">
                        @Html.DisplayNameFor(model => model.Body)
                    </dt>
                    <dd class="col-sm-9 text-break">
                        <p class="text-muted">@Html.DisplayFor(model => model.Body)</p>
                    </dd>

                    <dt class="col-sm-3 font-weight-bold text-secondary">
                        @Html.DisplayNameFor(model => model.UserId)
                    </dt>
                    <dd class="col-sm-9 text-break">
                        <span class="badge bg-info">@Html.DisplayFor(model => model.UserId)</span>
                    </dd>
                </dl>

                <hr class="my-4">
                @* Poner los comentarios una vez creados *@
                <div class="mb-4">
                    <h5 class="text-primary">Comentarios</h5>
                    <ul class="list-unstyled">
                        <li>
                            <div class="media mb-3">
                                <img src="https://via.placeholder.com/50" class="mr-3 rounded-circle" alt="Usuario">
                                <div class="media-body">
                                    <h6 class="mt-0">Usuario 1</h6>
                                    <p class="text-muted">¡Este es un comentario de ejemplo!</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="media mb-3">
                                <img src="https://via.placeholder.com/50" class="mr-3 rounded-circle" alt="Usuario">
                                <div class="media-body">
                                    <h6 class="mt-0">Usuario 2</h6>
                                    <p class="text-muted">¡Interesante perspectiva! Me gustaría saber más.</p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="text-center mt-5">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg mx-3 px-5 py-3">Editar
                        Post</a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg mx-3 px-5 py-3">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
